pipeline {
    agent any
    
    environment {
        NODEJS_HOME = tool name: 'NodeJS', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/your-repo/Calculator-main.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'  // If using a package manager for testing
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'  // Add actual test commands
            }
        }

        stage('Build') {
            steps {
                sh 'echo "Building Project..."'
            }
        }

        stage('Deploy') {
            steps {
                sh 'scp -r * user@server:/var/www/html/calculator'  // Modify as per your server
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful!'
        }
        failure {
            echo 'Build Failed!'
        }
    }
}
